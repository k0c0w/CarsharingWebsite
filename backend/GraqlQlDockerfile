FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

ADD ./certificates/https/aspnetapp.pfx /https/aspnetapp.pfx

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["GraphQL.API/GraphQL.API.csproj", "GraphQL.API/"]
COPY ["Core/Features/Features.csproj", "Core/Features/"]
COPY ["Core/Services/Services.csproj", "Core/Services/"]
COPY ["Core/Domain/Domain.csproj", "Core/Domain/"]
COPY ["Core/Shared/Shared.csproj", "Core/Shared/"]
COPY ["Core/Contracts/Contracts.csproj", "Core/Contracts/"]
COPY ["Infrastructure/Clients/Clients.csproj", "Infrastructure/Clients/"]
COPY ["Infrastructure/Migrations/Migrations.csproj", "Infrastructure/Migrations/"]
COPY ["Infrastructure/Persistence/Persistence.csproj", "Infrastructure/Persistence/"]
COPY ["Carsharing/Carsharing.csproj", "Carsharing/"]
COPY . .
WORKDIR "/src/GraphQL.API"
RUN dotnet build "GraphQL.API.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "GraphQL.API.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "GraphQL.API.dll"]
